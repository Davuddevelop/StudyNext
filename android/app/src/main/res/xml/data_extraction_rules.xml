<?xml version="1.0" encoding="utf-8"?>
<!--
    Data Extraction Rules for StudyNext (Android 12+)
    Controls what data can be extracted via cloud backup and device-to-device transfer.
    Required for Android 12+ (API 31+) compliance.
-->
<data-extraction-rules>
    <!-- Cloud backup rules - Exclude all sensitive data -->
    <cloud-backup>
        <exclude domain="sharedpref" path="." />
        <exclude domain="database" path="." />
        <exclude domain="file" path="." />
        <exclude domain="external" path="." />
        <exclude domain="root" path="shared_prefs" />
        <exclude domain="root" path="databases" />
        <exclude domain="root" path="cache" />
        <exclude domain="root" path="app_webview" />
    </cloud-backup>

    <!-- Device-to-device transfer rules - Exclude all sensitive data -->
    <device-transfer>
        <exclude domain="sharedpref" path="." />
        <exclude domain="database" path="." />
        <exclude domain="file" path="." />
        <exclude domain="external" path="." />
        <exclude domain="root" path="shared_prefs" />
        <exclude domain="root" path="databases" />
        <exclude domain="root" path="cache" />
        <exclude domain="root" path="app_webview" />
    </device-transfer>
</data-extraction-rules>
